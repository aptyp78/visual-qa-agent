{
  "name": "visual-qa-agent",
  "version": "1.3.0",
  "description": "Автономный агент для визуальной проверки веб-интерфейсов с AI-анализом",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "check": "node src/cli.js check",
    "check:quick": "node src/cli.js check --profile quick",
    "check:full": "node src/cli.js check --profile comprehensive",
    "baseline": "node src/cli.js baseline",
    "report": "node src/cli.js report",
    "serve-report": "npx serve reports/latest -p 3333"
  },
  "bin": {
    "visual-qa": "./src/cli.js",
    "visual-qa-mcp": "./src/mcp-server.js"
  },
  "keywords": [
    "visual-testing",
    "playwright",
    "ai-testing",
    "qa-automation",
    "regression-testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@playwright/test": "^1.48.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "diff-match-patch": "^1.0.5",
    "fs-extra": "^11.2.0",
    "jimp": "^1.6.0",
    "ora": "^8.1.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
